{
  "expo": {
    "name": "Monarch Tattoo",
    "slug": "monarch-tattoo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "monarch-tattoo",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f472b6"
    },
    "assetBundlePatterns": [
      "assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.monarchtattoo.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need access to your camera to take photos of body parts for tattoo preview.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to select images for tattoo preview.",
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby tattoo artists."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f472b6"
      },
      "package": "com.monarchtattoo.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "We need access to your photos to select images for tattoo preview."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We need your location to find nearby tattoo artists."
        }
      ],
      "expo-asset",
      "expo-maps"
    ],
    "extra": {
      "eas": {
        "projectId": ""
      }
    }
  }
}
